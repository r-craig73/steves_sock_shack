<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br><br>
  <%= f.label :content_body %>
  <%= f.text_area :content_body, size: "50x12" %>
  <br><br>
  <%= f.label :rating %>
  <%= f.number_field (:rating, :integer, in: 1..5, step: 1) %>
  <br><br>
  <%= f.submit "Add Review"%>
<% end %>
