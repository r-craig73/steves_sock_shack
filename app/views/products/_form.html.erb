<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name, "Sock's name"%>
  <%= f.text_field :name %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <br><br>
  <%= f.label :country_of_origin, "Made in which country" %>
  <%= f.text_field :country_of_origin %>
  <br><br>
  <%= f.label :featured, "Featured" %>
  <%= f.radio_button :featured, true %>
  <%= f.label :notfeatured, "Not Featured" %>
  <%= f.radio_button :featured, false %>
  <br><br>
  <%= f.submit %>
<% end %>
