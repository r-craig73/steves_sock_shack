<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= f.label :name, "Sock name"%>
      <%= f.text_field :name %>
      <%= f.label :cost %>
      <%= f.text_field :cost %>
    </div>
    <div class="col-md-6">
      <%= f.label :country_of_origin, "Made in which country" %>
      <%= f.text_field :country_of_origin %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :featured, "Featured" %>
      <%= f.radio_button :featured, true %>
      <%= f.label :notfeatured, "Not Featured" %>
      <%= f.radio_button :featured, false %>
    </div>
    <div class="col-md-6">
  <%= f.submit "Add Sock"%>
    </div>
  </div>
</div>
<% end %>
<hr>

<h4><%= link_to "Go Home", products_path %></h4>
